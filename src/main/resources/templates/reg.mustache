<body class="text-center" style="background: #4c7daf">

<main class="form-signin">
    <form action="/reg" method="post">
        <h1 class="h3 mb-3 fw-normal" style="color: white">Регистрация нового пользователя</h1>

        <div class="form-floating">
            <input type="text" maxlength="40" name="login" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput" style="color: #27425e">Введите имя</label>
        </div>
        {{#ErrorName}}
            <a style="color: #BC0003">{{ErrorName}}</a>
        {{/ErrorName}}
        <div class="form-floating">
            <input type="password" maxlength="40" name="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword" style="color: #27425e">Введите пароль</label>
        </div>

        <div class="checkbox mb-3">
        </div>
        <button class="w-100 btn btn-lg btn-primary" style="background-color:rgba(53,105,133,0.63)" type="submit">Зарегистрироваться</button>
        <p class="mt-5 mb-3 text-muted"><a style="color: white"></a></p>
    </form>
